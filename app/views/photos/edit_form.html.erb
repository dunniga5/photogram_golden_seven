<h1>Edit Photo</h1>

<form action="/update_photo/<%= @photo.id %>">

  <label>Caption</label>
  <input type="text" name="the_caption" value="<%= @photo.caption %>">

  <label>Source:</label>
  <input type="text" name="the_source" value="<%= @photo.source %>">

  <button>Update Photo</button>

</form>
